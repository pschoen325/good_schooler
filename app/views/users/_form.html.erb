  <% end %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <!-- every textarea, select and input its most important attribute is its name -->

  <div class="field">
    <%= f.label :email %>
    <%= f.text_field :email %>
  </div>

  <div class="field">
    <%= f.label :code_school_id %><br />
    <%= f.select :cohort, 1..3 %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
